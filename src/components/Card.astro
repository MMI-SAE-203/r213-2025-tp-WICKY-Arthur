---
const { ...offre } = Astro.props;
---

<div class="flex-col p-8 pb-4 pt-4">
    {
        (
            <ul class="p-5 border border-gray-300 rounded-lg shadow-lg font-size-xl justify-center">
                <li>{offre.nomMaison}</li>
                <li>{offre.adresse}</li>
                <li>{offre.id}</li>
                <li>{offre.nbChambres} chambres</li>
                <li>{offre.nbSdb} salles de bain</li>
                <li>{offre.surface} m²</li>
                <li>{offre.prix} €</li>
                <li class="uppercase">{offre.favori}</li>
            </ul>
        )
    }
</div>
