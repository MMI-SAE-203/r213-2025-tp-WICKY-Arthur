---
const { ...offre } = Astro.props;
---

<div class="flex p-8 pb-4 pt-4">
    {
        (
            <ul class="p-5 border border-gray-300 rounded-lg shadow-lg font-size-xl justify-center">
                <li>{offre.Nom}</li>
                <li>{offre.Adresse}</li>
                <li>{offre.id}</li>
                <li>{offre.Nombre_de_chambres} chambres</li>
                <li>{offre.Nombre_de_salles_de_bain} salles de bain</li>
                <li>{offre.Superficie} m²</li>
                <li>{offre.Prix} €</li>
                <li class="uppercase">{offre.Favori}</li>
                <li>
                    <img src={offre.imageUrl} alt="" />
                </li>
                <li>
                    <button
                        class="relative p-4 mt-4 bg-slate-300 rounded-xl
                        font-semibold"
                    >
                        <a href={`/offres/${offre.id}`}>Voir plus</a>
                    </button>
                </li>
            </ul>
        )
    }
</div>
